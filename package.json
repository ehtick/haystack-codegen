{
	"name": "haystack-codegen",
	"description": "Project Haystack Core code generation tools",
	"keywords": [
		"project haystack",
		"haystack",
		"core",
		"typescript",
		"codegen"
	],
	"license": "BSD-3-Clause",
	"author": "Gareth Johnson",
	"homepage": "https://github.com/j2inn/haystack-codegen",
	"email": "support@j2inn.com",
	"version": "0.5.0",
	"module": "dist/index.es.js",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/j2inn/haystack-codegen"
	},
	"bin": {
		"defcodegen": "dist/index.js"
	},
	"scripts": {
		"lint": "eslint --ext .ts .",
		"format": "eslint --ext .ts . --fix && prettier-eslint --show-different --write \"$(pwd)/**/*.ts\"",
		"test": "jest",
		"build": "npm run build:clean && tsc --project ./tsconfig.build.json",
		"build:clean": "rimraf ./dist",
		"prepack": "npm run lint && npm test && npm run build",
		"codegen": "npm run build && node ./dist/index",
		"doc": "typedoc ./src"
	},
	"files": [
		"dist/**/*",
		"rc/**/*"
	],
	"config": {
		"unsafe-perm": true
	},
	"devDependencies": {
		"@types/colors": "^1.2.1",
		"@types/jest": "^26.0.22",
		"@types/node": "^15.0.1",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"copyfiles": "^2.4.1",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.2.0",
		"eslint-plugin-prettier": "^3.4.0",
		"haystack-core": "2.0.19",
		"jest": "^26.6.3",
		"nodemon": "^2.0.7",
		"npm-dts": "^1.3.9",
		"npm-dts-webpack-plugin": "^1.3.7",
		"prettier": "^2.2.1",
		"prettier-eslint": "^12.0.0",
		"prettier-eslint-cli": "^5.0.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.46.0",
		"ts-jest": "^26.5.4",
		"ts-loader": "^9.1.1",
		"ts-node": "^9.1.1",
		"typedoc": "^0.20.36",
		"typescript": "^4.2.4",
		"typescript-eslint-parser": "^22.0.0"
	},
	"peerDependencies": {
		"haystack-core": "^2.0.19"
	},
	"dependencies": {
		"@types/adm-zip": "^0.4.34",
		"@types/node-fetch": "^2.5.10",
		"adm-zip": "^0.5.5",
		"colors": "^1.4.0",
		"commander": "^7.2.0",
		"haystack-nclient": "^2.0.11",
		"node-fetch": "^2.6.1"
	}
}
